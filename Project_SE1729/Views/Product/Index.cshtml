@using Project_SE1729.Models;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }

        .row::after {
            content: "";
            clear: both;
            display: table;
        }

        .col-md-3 {
            float: left;
            width: 25%;
        }

        .col-md-9 {
            float: left;
            width: 75%;
        }

        h2 {
            margin-top: 0;
        }

        .list-group {
            list-style: none;
            padding: 0;
        }

        .list-group-item {
            border: 1px solid #ddd;
            margin-bottom: -1px;
        }

            .list-group-item a {
                text-decoration: none;
                display: block;
                padding: 10px;
                color: #333;
            }

                .list-group-item a:hover {
                    background-color: #f4f4f4;
                }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 10px;
        }

        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }

        th {
            background-color: #f4f4f4;
        }

        .btn-primary {
            background-color: #007bff;
            color: #fff;
            padding: 6px 12px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

            .btn-primary:hover {
                background-color: #0056b3;
            }
    </style>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-3">
                <h2>Category</h2>
                <ul class="list-group">
                    @foreach (Category item in ViewBag.Categories)
                    {
                        <li class="list-group-item">
                                <a href="/Product/ListProduct?Categoryid=@item.CategoryId">@item.Name</a>
                        </li>
                    }
                </ul>
            </div>
            <div class="col-md-9">
                <div class="row">
                    <div class="col-md-9">
                        <h2>List of Product</h2>
                    </div>
                    <div class="col-md-3">
                        <a href="#">Profile</a>
                        <a href="#">Login</a>
                        <a href="#">Logout</a>
                    </div>
                    
                </div>
                
                <table>
                    <thead>
                        <tr>
                            <th>ProductId</th>
                            <th>ProductName</th>
                            <th>Image</th>
                            <th>Quantity</th>
                            <th>Price</th>
                            <th>Description</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Product item in ViewBag.Products)
                        {
                            <tr>
                                <td>
                                    <a href="Product/Detail?Productid=@item.ProductId">@item.ProductId</a>
                                </td>
                                <td>@item.Name</td>
                                <td>
                                    <img src="@item.Image" width="50px" height="50px"/>
                                </td>
                                <td>@item.Quanlity</td>
                                <td>@item.Price</td>
                                <td>@item.Description</td>
                                <td><a href="Product/AddCart?Productid=@item.ProductId&Categoryid=@item.Cid" class="btn-primary">Add Cart</a></td>
                            </tr>
                        }
                        
                        
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>
</html>
